// var float MY_TODO_COST = input.float(defval = 3632, title = " æˆæœ¬",  step =  1, inline = "03", group = GROUP_CURRENCY) 
// var float MY_TODO_AVERAGE_PRICE = input.float(defval = 0.183, title = " å‡åƒ¹",  step =  1, inline = "04", group = GROUP_CURRENCY) 
