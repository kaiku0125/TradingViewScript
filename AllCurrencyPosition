// Define inputs settings
var string GROUP_CURRENCY = "ğŸ’² ç¾è²¨"
var GROUP_VERSION = "ğŸ’¬ é—œæ–¼"
var VERSION_NAME = "v1.0"
var RELEASE_NOTE = VERSION_NAME + " Release note :" + "\n" + 
                     "[1] First release."

INPUT_DISPLAY_VERSION_NAME = input.string(defval = VERSION_NAME, title = "ç‰ˆæœ¬", options = [VERSION_NAME], tooltip = RELEASE_NOTE, group = GROUP_VERSION) 


//Variable initialization
var int TOTAL_TITLE_DISPLAY = 4
var int TOTAL_CURRENCY_CLASS = 2 //TODO : ç¸½å…±æœ‰å¹¾ç¨®è²¨å¹£
var string REMAIN_TITLE = "æ®˜å€¼(U)"
var string PROFIT_TITLE = "æç›Š(U)"
var string PROFIT_PERCENT_TITLE = "åˆ©æ½¤"

var string BTC_SYMBOL = "BYBIT:BTCUSDT.P"
var float MY_BTC_POSITION = input.float(defval = 0.082021, title = "BTCç¸½é‡",  step =  1, inline = "01", group = GROUP_CURRENCY) 
var float MY_BTC_COST = input.float(defval = 1800.48, title = " æˆæœ¬",  step =  1, inline = "01", group = GROUP_CURRENCY) 
var float MY_BTC_AVERAGE_PRICE = input.float(defval = 21941.85, title = " å‡åƒ¹",  step =  1, inline = "01", group = GROUP_CURRENCY) 
var float currentBTCPrice = 0.0
var float remainBTC = 0.0
var float profitBTC = 0.0
var float profitPercentBTC = 0.0

var string CRO_SYMBOL = "COINBASE:CROUSD"
var float MY_CRO_POSITION = input.float(defval = 21869, title = "CROç¸½é‡",  step =  1, inline = "02", group = GROUP_CURRENCY) 
var float MY_CRO_COST = input.float(defval = 3632, title = " æˆæœ¬",  step =  1, inline = "02", group = GROUP_CURRENCY) 
var float MY_CRO_AVERAGE_PRICE = input.float(defval = 0.183, title = " å‡åƒ¹",  step =  1, inline = "02", group = GROUP_CURRENCY) 
var float currentCROPrice = 0.0
var float remainCRO = 0.0
var float profitCRO = 0.0
var float profitPercentCRO = 0.0

