// float twdStockRebalance = INPUT_DISPLAY_CURRENCY == TWD ? stockRebalance : stockRebalance * pUsd_Twd
string twStockPNLText = getRebalanceText("ÂÖÉÂ§ß ", BANK3_AVAL, stockRebalance)
